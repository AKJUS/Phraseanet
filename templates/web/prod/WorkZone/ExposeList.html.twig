{% for publication in publications %}
    <div class="expose_basket_item basketTips ui-accordion-header ui-state-default
                    ui-corner-all header">
        <div class="top_block">
                    <div class="diapo">
                        {% for asset in publication.assets|slice(0, 1) %}
                        <img class="top_image" width="60" src="{{ asset.asset.url }}" />
                        {% endfor %}
                    </div>

                <p class="expose_item_title"><span>{{ publication.title }}</span><span class="exp_date"></span></p>

        </div>
        <div class="expose_item_deployed">
            <div class="expose_item_top"><h3>{{ publication.title }}</h3>
                <button type="button" class="green_button edit_expose"><span>Edit</span></button>
                <span>delete</span></div>
            <div class="expose_item_bottom">
                <span class="item_numbers">{{ publication.assets|length }}</span>
                <input type="button" class="green_button save_expose" value="save">
                <div id='expose_3' class="expose_drag_drop">
                    {% for asset in publication.assets %}
                        <div class="diapo">
                            <img src="{{ asset.asset.url }}">
                        </div>
                    {% endfor %}
                    Place to drop elt
                </div>
                <input type="button" class="load_more_expose" value="load More">
            </div>
        </div>
    </div>
{% endfor %}
<script>
    $('.expose_basket_item .top_block').on('click', function (event) {
        $(this).parent().find('.expose_item_deployed').toggleClass('open');
        $(this).toggleClass('open');
    });
    $('.edit_expose').on('click',function (event) {
        editExposeOnBasket();
    });
    function editExposeOnBasket() {
        $('#DIALOG-expose-edit').attr('title','Edit expose title')
            .dialog({
                autoOpen: false,
                closeOnEscape: true,
                resizable: true,
                draggable: true,
                width: 900,
                height: 575,
                modal: true,
                overlay: {
                    backgroundColor: '#000',
                    opacity: 0.7
                }
            }).dialog('open');
        $('.ui-dialog').addClass('black-dialog-wrap publish-dialog');
        $('.close-expose-modal').on('click', function () {
            $('#DIALOG-expose-edit').dialog('close');
        });
    }
</script>
